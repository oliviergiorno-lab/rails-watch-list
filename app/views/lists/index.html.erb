<h1 class="mb-4">My Watch Lists</h1>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <%= link_to "View list", list_path(list), class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
